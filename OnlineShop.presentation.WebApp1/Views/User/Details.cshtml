@model OnlineShop.presentation.WebApp1.Models.Users.UserDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>UserDetailsViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstNameCore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstNameCore)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastNameCore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastNameCore)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carts)
        </dt>

        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Carts.First().Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Carts.First().DateCreation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Carts.First().IsPaied)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Carts.First().CartArticles)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Carts)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsPaied)
                        </td>
                        <td>
                            <p>IdArticle | Quantité</p>

                            @foreach (var item1 in item.CartArticles)
                                {
                                <p>
                                    @Html.DisplayFor(modelItem => item1.ArticleId) |
                                    @Html.DisplayFor(modelItem => item1.Amount)
                                </p>
                                }
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
